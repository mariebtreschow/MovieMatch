html
  head
    title MovieMatch Application
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css" integrity="sha384-AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi" crossorigin="anonymous")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
  body
    nav(class="navbar navbar-dark bg-inverse")
      a(class="navbar-brand" href="/") Home

      if user
        a(href="/logout" class="btn btn-md btn-danger navbar-brand float-xs-right") Logout
        a(href="/user/profile/edit" class="btn navbar-brand float-xs-right") Edit
        a(href="/user/profile" class="btn btn-md btn-success float-xs-right navbar-brand float-xs-right") My Profile
        a(href="/user/movies" class="btn navbar-brand float-xs-right") MovieMatch


      else if admin
        a(href="/logout" class="btn navbar-brand float-xs-right") Logout
        a(href="/admin/movies" class="btn navbar-brand float-xs-right") Admin Panel
        a(href="/admin/movies/new" class="btn btn-success float-xs-right" id="user") Add Movie

      else

        a(href="/register" class="navbar-brand float-xs-right") Register
        a(href="/login" class="navbar-brand float-xs-right") Login

    block content

    script(src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha256-/SIrNqv8h6QGKDuNoLGA4iret+kyesCkHGzVUUV0shc=" crossorigin="anonymous")
    script(src="/js/application.js")
