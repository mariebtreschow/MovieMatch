extends ../application.pug

block content

	.container
		br
		h2 Here is your MovieMatch Profile:
		.card.card-block
			.row
				.col-xs-4
					img(src=user.profileImageURL width="300" height="300" float-xs-left)
				.col-xs-4
					h5="Name: " + user.name + " " + user.surname
					h5="Email: " + user.email
					h5="Age: " + user.age
				.col-xs-2.offset-xs-3
					a(href='/user/profile/edit')
						button(type="submit" class="btn btn-lg btn-warning") Edit User
				.col-xs-2
					form(action="/user/" + user.id method="POST")
						input(type="hidden" name="_method" value="DELETE")
						button(type="submit" class="btn btn-lg btn-danger") Delete User
