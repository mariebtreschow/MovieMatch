extends ../application.pug

block content
	.container
		.row
			.col-xs-6.offset-xs-2
				if errors
					each error in errors
						div(class="alert alert-danger" role="alert")
							span= error.message
				br
				h1 Update your Password:
				hr
				form(action="/edit-password" method="POST")
					input(type="hidden" name="_method" value="PUT")
					div(class="form-group")
						lable(for="password") New Password:
						input(name="password" type="text" class="form-control" id="user-password")

					div(class="form-group text-xs-center")
						button(type="submit" class="btn btn-block btn-ls btn-success") Update your password
