
extends ../application.pug

block content
	.container
		.row
			.col-xs-6.offset-xs-2
				if errors
					each error in errors
						div(class="alert alert-danger" role="alert")
							span= error.message
				br
				h1 Create a New User:
				hr
				form(action="/user" method="POST")
					div(class="form-group")
						lable(for="profileImageURL") Picture Link:
						input(name="profileImageURL" type="text" class="form-control")
					div(class="form-group")
						lable(for="name") Name:
						input(name="name" type="text" class="form-control")
					div(class="form-group")
						lable(for="lastname") Surname:
						input(name="surname" type="text" class="form-control" )
					div(class="form-group")
						lable(for="email") Email:
						input(name="email" type="text" class="form-control")
					div(class="form-group")
						lable(for="age") Age:
						input(name="age" type="integer" class="form-control")
					div(class="form-group")
						lable(for="password") Password:
						input(name="password" type="password" class="form-control")

					div(class="form-group text-xs-center")
						button(type="submit" class="btn btn-block btn-ls btn-success") Create a New User
