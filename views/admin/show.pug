extends ../application.pug

block content
  h1 Movie List
  hr
  each movie in movies
    .container
      .card.card-block
        .row
          .col-md-4.hidden-md-down
            img(src=movie.coverImageURL alt=movie.title + "Cover Image" class="img-fluid")
          .col-xs-12.col-md-8
            h2= movie.title
            h5= movie.directorName
            p= movie.description
            .row
              .col-xs-3.offset-xs-6
                a(href="/admin/movies/" + "edit/" + movie.id class="btn btn-warning") EDIT MOVIE
              .col-xs-3
                form(action="/admin/" + movie.id method="POST")
                  input(type="hidden" name="_method" value="DELETE")
                  button(type="submit", class="btn btn-danger btn-block") DELETE
